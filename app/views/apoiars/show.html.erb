<ul class="nav nav-tabs">
  <li class="nav-item">
    <%= link_to "Todas", apoiars_path, :class => "nav-link" %>
  </li>
  <% if user_signed_in? %>
    <li class="nav-item">
      <%= link_to 'Cadastrar', new_apoiar_path, :class => "nav-link" %>
    </li>
  <% end %>
  <li class="nav-item">
    <%= link_to "Detalhes do Apoio ao Projeto #{@apoiar.pedido.projeto.nome}", apoiar_path(@apoiar), :class => "nav-link active" %>
  </li>
</ul>

<br/>

<div class="tab-content">
  <div class="tab-pane active">
    <dl class="row">
      <dt class="col-sm-3"><strong>Projeto:</strong></dt>
      <dd class="col-sm-9"><%= link_to @apoiar.pedido.projeto.nome, projeto_path(@apoiar.pedido.projeto) %>&nbsp;</dd>

      <dt class="col-sm-3"><strong>Tipo:</strong></dt>
      <dd class="col-sm-9"><%= @apoiar.pedido.tipo %>&nbsp;</dd>
    </dl>

    <hr/>
    <% if user_signed_in? %>
      <% if current_user.admin? or current_user.id == @apoiar.user_id %>
        <div class="form-actions">
          <%= link_to "Voltar", apoiars_path, :class => 'btn btn-success'  %>
          <%= link_to "Editar", edit_apoiar_path(@apoiar), :class => 'btn btn-warning' %>
          <%= link_to "Apagar", apoiar_path(@apoiar), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'VocÃª tem Certeza?')) }, :class => 'btn btn-danger' %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
